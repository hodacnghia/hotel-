
<%= form_for :room, url: hotel_rooms_path(@hotel.id),method: :post do |form| %>

  <div class="col-sm-5" id="cus_type">
    <p>
      <%= form.label :type_id %><a> : </a>
    </p>
    <p>
      <%= collection_select(:room, :type_id, Type.all, :id, :name, {prompt: true}) %>
    </p>
  </div>

  <div class="col-sm-5" id="cus_bed">
    <p><%= form.label :bed %><a> : </a></p>
    <p>
      <%= form.number_field :bed, id: :room_bed, id:"cus_label_bed"%>
    </p>
  </div>

  <div class="col-sm-0" >
    <%= form.label :status %><br>
    <%= form.check_box :status, id: :room_status %>
  </div>

<div class="col-sm-12" id="cus_price">
    <%= form.label :price %><br>
    <%= form.text_field :price, id: :room_price, id:"cus_label_price" %>
</div>

<p>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Create Room</button>
</p>
<% end %>
