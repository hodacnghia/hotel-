<%= form_with(model: [ @hotel ,@room, @room.orders.build(:user_id => current_user.id) ]) do |form| %>

  <div class="field">
    <%= form.label :form %>
    <%= form.text_field :form, id: :order_form, class:'datepicker' %>
  </div>
  <div class="field">
    <%= form.label :to %>
    <%= form.text_field :to, id: :order_to, class:'datepicker' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>



<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker({
      format: "dd-mm-yyyy",
      datesDisabled: ['15/12/2017']
    });
  });
</script>
